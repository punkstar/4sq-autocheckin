source :rubygems

# Database access
gem 'data_mapper'
gem 'dm-mysql-adapter'

# Registration server
gem 'sinatra'

# Foursquare communication
gem 'foursquare2'
gem 'oauth2'

# nmap result parsing
gem 'nmap-parser'

# Require an older version of rack due to a bug in rack-flash (https://github.com/nakajima/rack-flash/issues/8)
gem "sinatra-flash"