source 'https://rubygems.org'

ruby '1.9.3'

# Database access
gem 'dm-core', :git => 'https://github.com/datamapper/dm-core', :branch => 'release-1.2'
gem 'dm-mysql-adapter'

# Registration server
gem 'sinatra'

# Foursquare communication
gem 'foursquare2'
gem 'oauth2'

# nmap result parsing
gem 'nmap-parser'

# Require an older version of rack due to a bug in rack-flash (https://github.com/nakajima/rack-flash/issues/8)
gem "sinatra-flash"