<div class="row">
  <div class="span6">
      <% if not devices.nil? and devices.count > 0 %>
          <ul>
          <% devices.each do |device| %>
              <li>
                
                <form action="/device/delete" method="post" class="inline device_delete" onsubmit="return confirm('Are you sure you want to delete this device?')">
                                    <%= h device.name %> (<code><%= h device.mac_addr %></code>)
                    <input type="hidden" name="id" value="<%= device.id %>" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </li>
          <% end %>
          </ul>
      <% else %>
          <i>You currently don't have any devices.</i>
      <% end%>
  </div>
  <div class="span6">
      <form action="/device/add" method="post">
          <fieldset>
              <legend>Add a Device</legend>
              <div class="control-group">
                  <label for="name">Name</label>
                  <input type="text" name="name" value="<%= h params[:name] %>" />
              </div>
              <div class="control-group">
                  <label for="mac_addr">MAC Address</label>
                  <input type="text" name="mac_addr" value="<%= h params[:mac_addr] %>" />
              </div>
              <div class="form-actions">
                  <input type="submit" value="Register Device" class="btn btn-primary" />
              </div>
          </fieldset>
      </form>
  </div>
</div>
